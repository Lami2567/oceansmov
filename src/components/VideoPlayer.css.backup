.video-player-container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  background: #1a1a1a;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.video-player-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background: #2a2a2a;
  border-bottom: 1px solid #333;
}

.video-title {
  color: #fff;
  margin: 0;
  font-size: 1.5rem;
  font-weight: 600;
}

.video-stats {
  display: flex;
  gap: 15px;
  color: #ccc;
  font-size: 0.9rem;
}

.video-time, .video-quality {
  padding: 4px 8px;
  background: #333;
  border-radius: 4px;
}

.video-player-wrapper {
  position: relative;
  width: 100%;
  background: #000;
}

.video-js-container {
  width: 100%;
  height: 400px;
  background: #000;
  position: relative;
}

/* Let Video.js handle all its own styling */
.video-js {
  width: 100% !important;
  height: 100% !important;
  background: #000;
}

/* Ensure video element is visible */
.video-js video {
  width: 100% !important;
  height: 100% !important;
  background: #000;
}

/* Fallback styles */
.fallback-poster {
  position: relative;
  width: 100%;
  height: 400px;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fallback-poster img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.fallback-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.fallback-play-button {
  background: #007bff;
  color: white;
  border: none;
  padding: 15px 30px;
  border-radius: 25px;
  font-size: 1.1rem;
  cursor: pointer;
  transition: background 0.3s;
}

.fallback-play-button:hover {
  background: #0056b3;
}

.hidden {
  display: none !important;
}

/* Responsive design */
@media (max-width: 768px) {
  .video-player-header {
    flex-direction: column;
    gap: 10px;
    text-align: center;
  }
  
  .video-stats {
    justify-content: center;
  }
  
  .video-js-container {
    height: 250px;
  }
  
  .fallback-poster {
    height: 250px;
  }
} 